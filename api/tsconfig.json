{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": ".",
    "target": "es6",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "esnext"
    ],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ]
}
